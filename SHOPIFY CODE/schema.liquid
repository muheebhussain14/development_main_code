{% if section.setting.enabletext %}
<div><h4>{{% section.setting.textid %}}</h4></div>
{% endif %}


{% schema %}
  {
    "name": "Reviews Banner",
    "settings": [
        {
          "type": "text",
          "id": "textid",
          "label": "Enter your text"
          "default": "Enter text here"
        },
        {
          "type": "checkbox",
          "id": "enabletext",
          "label": "enable your text"
          "default": "true"
        }
      ]
  }

{% endschema %}


