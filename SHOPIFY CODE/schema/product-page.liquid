<section id="product-Section">
    <div class="container">
        <div class="product-section-inner">
            <div class="products-title title-wrapper">
                <div class="primary-title">
                    <h4>{{ section.settings.product_title }}</h4>
                </div>
                <div class="content-inner">
                    <p>{{ section.settings.product_text }}</p>
                </div>
            </div>

            <div class="products-main-row">
                <!-- product row -->
                <div class="row products-inner">
                    <div class="col-lg-4">
                        <div class="category-title-wrapper title-wrapper">
                            <div class="primary-title">
                                <h4>{{ section.settings.category_title }}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="row products-row">
                            {% for product in collections.featured-products.products limit: 6 %}
                            <div class="col-md-6">
                                <div class="product-wrapper">
                                    <a href="{{ product.url }}" class="product-card-link"></a>
                                    <div class="product-img">
                                        <img src="{{ product.featured_image | product_img_url: 'large' }}"
                                            alt="{{ product.featured_image.alt }}">
                                    </div>
                                    <div class="product-content">
                                        <div class="product-content-inner">
                                            <div class="product-title">
                                                <h4 class="product-title">{{ product.title | escape }}</h4>
                                            </div>
                                            <div class="pricing-wrapper">
                                                <div class="list-price">
                                                    <p>list price</p>
                                                </div>
                                                <div class="custom-product-price-wrapper">
                                                    <p class="custom-product-price">{% include 'product-price-listing',
                                                        product: product %}</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="add-to-cart-wrapper">
                                            <form action="/cart/add" method="post">
                                                {% if product.variants.size == 1 %}
                                                <input type="hidden" name="id"
                                                    value="{{ product.variants.first.id }}" />
                                                <div class="add-to-cart-wrapper">
                                                    <button type="submit" name="add" class="palm-add-to-cart">
                                                        Add To Cart
                                                    </button>
                                                </div>
                                                {% else %}
                                                <div class="add-to-cart-wrapper">
                                                    <a href="{{ product.url | within: collection }}"
                                                        class="palm-add-to-cart">Show
                                                        Details</a>
                                                </div>
                                                {% endif %}
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <div class="primary-button-wrapper">
                            <a href="#" class="btn primary-btn">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% schema %}
{
"name": "Product Page",
"settings": [
{
"type": "text",
"id": "product_title",
"label": "Section Heading"
},
{
"type": "text",
"id": "product_text",
"label": "Section Button Text"
},
{
"type": "text",
"id": "category_title",
"label": "Sidebar Title"
},
{
"type": "text",
"id": "product_btn_text",
"label": "Section Button Text"
},
{
"type": "url",
"id": "product_btn_link",
"label": "Section Button Link"
}
],
"presets": [
{
"name": "Products"
}
]
}
{% endschema %}

